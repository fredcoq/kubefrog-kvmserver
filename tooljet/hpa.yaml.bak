apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: tooljet
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: tooljet
  minReplicas: {{ .Values.apps.tooljet.hpa.min }}
  maxReplicas: {{ .Values.apps.tooljet.hpa.max }}
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: {{ .Values.apps.tooljet.hpa.threshold.cpu }}
  - type: Resource
    resource:
      name: memory
      target:
        type: Utilization
        averageUtilization: {{ .Values.apps.tooljet.hpa.threshold.ram }}


